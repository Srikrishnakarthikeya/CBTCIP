<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Users</title>
    <link rel="stylesheet" href="/css/admin.css">
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        /* Custom style for the icon */
        .user-icon {
            margin-right: 5px; /* Adjust spacing between icon and user ID */
        }
    </style>
</head>
<body>
    <h1>List of Users</h1>
    <div class="container">
        <% users.forEach(user => { %>
            <div class="user-entry">
                <!-- Icon with class 'user-icon' -->
                <p><i class="fas fa-user user-icon"></i> <strong>Username:</strong> <%= user.username %> <strong>Email:</strong> <%= user.email %></p>
                <form action="/delete-user" method="POST">
                    <input type="hidden" name="userId" value="<%= user._id %>">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
</body>
</html>

