        }
        body {
            
            font-family: 'Roboto', 'Helvetica', sans-serif;
            /* background-color: rgb(239, 228, 209); */
            
        }
        
        .navbar{
            position: fixed; /* Make the navbar fixed */
            top: 0;
            left: 0;
            z-index: 1000;
            width: 100%; 
            background-color: #666;
        }
        .navbar nav
        {
            background-color: #666;
            width:100vw;
            height:100px;
            display: flex;
            color:white;
            /* flex-direction: row; */
            box-shadow: 0 1px 1px rgba(0,0,0,0.08), 0 2px 2px rgba(0,0,0,0.12), 0 4px 4px rgba(0,0,0,0.16), 0 8px 8px rgba(0,0,0,0.20);
            animation:sta 1s linear forwards;
            background-attachment: fixed;
        }
        
        @keyframes sta
        {
            0%
            {
                translate:0 -200px;
            }
        
            100%
            {
                translate:0 0;
            }
        }
        
        .navbar nav p {
            font-size: 5rem;
            margin:auto 0;
            margin-left: 60px;
            /* margin-bottom: 9.5rem;
            margin-top: 2.5rem; */
            color: yellow;
        
            background-color: #666;
            animation-name: par;
            animation-duration: 2s;
            animation-timing-function: linear;
            animation-fill-mode: forwards;
            /* animation-delay: 2s; */
        }
        
        @keyframes par{
            0%
            {
                translate:-200px 0;
                opacity: 0;
                border-right: 10px solid black;
                border-bottom: 10px solid black;
            }
        
            50%{
                translate:-200px 0;
                opacity: 0;
                /* border-right: 10px solid black;
                border-bottom: 10px solid black; */
                border-left: 8px solid black;
                /* border-top: 10px solid black; */
            }
        
            99.999999999%
            {
                /* border-right: 10px solid black;
                border-bottom: 10px solid black; */
                border-left: 8px solid black;
                /* border-top: 10px solid black; */
            }
        
            100%
            {
                translate:0 0;
                opacity: 1;
            }
        }
        
        .navbar ul {
            color: black;
            
            list-style: none;
            display: flex;
            flex-direction: row;
            gap: 20px;
            padding: 0;
            margin:auto 0;
            margin-left: 80px;
            position: relative;
        }
        
        .navbar ul li
        {
            /* background-color: red; */
            width:100px;
            height:50px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 7.5%;
            color:white
        
            /* transition: all 0.1s; */
        }
        
        
        
        .navbar ul li:hover
        {
            /* background-color: red;
            width:100px;
            height:50px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 7.5%; */
             animation: ppp 0.5s linear forwards; 
        }
        
        @keyframes ppp
        {
            0%
            {
                background-color: white;
                width:100px;
            height:50px;
            }
        
            50%{
                background-color: #666;
                border-radius: 7.5%;
                width:100px;
            height:50px;
            }
        
            100%
            {
                background-color: #666;
                border-radius: 15%;
                scale:0.85;
                width:100px;
            height:50px;
            }
        }
        
        
        
        .navbar a {
            text-decoration: none;
            color: black;
            font-size: 18px;
            font-weight: bold;
            /* transition: color 0.5s; */
            color:white
        }
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
